<UserControl x:Class="Thetacat.Migration.Elements.Media.UI.MediaTagMigrateSummary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Thetacat.Migration.Elements.Media.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="100*" />
            <RowDefinition Height="24" />
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="Wrap">
            These are the operations that will be executed against the database to migrate media tags (both metadata and version
            stacks). Use this tab to fine-tune the operations before committing them.
        </TextBlock>
        <ListView Name="diffOpListView" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Include">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox Name="Include" IsChecked="{Binding Path=Include}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=MediaID}">
                            <GridViewColumnHeader Tag="CatID" Content="MediaID" />
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=VirtualPath}">
                            <GridViewColumnHeader Tag="Path" Content="Path" />
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=MetatagSetting.Standard}">
                            <GridViewColumnHeader Tag="Standard" Content="Standard" />
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=MetatagSetting.Name}">
                            <GridViewColumnHeader Tag="Metatag" Content="Metatag" />
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=Value}">
                            <GridViewColumnHeader Tag="Value" Content="Value" />
                        </GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Content="Migrate Metatags" IsDefault="True"
                    Click="DoMigrate" Grid.Column="0" Height="24" />
        </Grid>
    </Grid>
</UserControl>
