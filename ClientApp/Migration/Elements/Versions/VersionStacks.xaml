<UserControl x:Class="Thetacat.Migration.Elements.Versions.VersionStacks"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Thetacat.Migration.Elements.Versions"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListView Name="StackListView" ItemsSource="{Binding Path=PseVersionStackItem}" Grid.Row="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="StackID" DisplayMemberBinding="{Binding StackID}" />
                    <GridViewColumn Header="MediaID" DisplayMemberBinding="{Binding MediaID}" />
                    <GridViewColumn Header="Index" DisplayMemberBinding="{Binding Path=MediaIndex}" />
                    <GridViewColumn Header="Parent" DisplayMemberBinding="{Binding Path=Parent}" />
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Path=CreateDate}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
