<Window x:Class="Thetacat.UI.Explorer.Filter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Thetacat.UI.Explorer"
        xmlns:controls="clr-namespace:Thetacat.Controls"
        mc:Ignorable="d"
        Title="Filter" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0">
            <GroupBox.Header>Select on or more tags filter to</GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <controls:MetatagTreeView Checkable="True" x:Name="Metatags" Grid.Row="0" />
            </Grid>
        </GroupBox>
        <Grid HorizontalAlignment="Right" Margin="0 0 0 5" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="64" />
            </Grid.ColumnDefinitions>
            <Button Content="Apply" IsDefault="True" Click="DoApply" Height="24" Margin="5 0 0 0" />
        </Grid>
    </Grid>
</Window>