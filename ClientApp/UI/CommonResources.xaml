<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:helpers="clr-namespace:Thetacat.UI.Helpers">
    <Style TargetType="StackPanel" x:Key="StackPanel.ButtonStack-MediumWidth-Tight">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="helpers:PanelButtonHelper.Spacing" Value="2.5" />
        <Setter Property="helpers:PanelButtonHelper.ApplyButtonProperties" Value="True" />
    </Style>
    <Style TargetType="DockPanel" x:Key="DockPanel.ButtonStack-MediumWidth-Tight">
        <Setter Property="Margin" Value="0" />
        <Setter Property="helpers:PanelButtonHelper.Spacing" Value="2.5" />
        <Setter Property="helpers:PanelButtonHelper.ApplyButtonProperties" Value="True" />
    </Style>
    <Style TargetType="Button" x:Key="StackPanel.ButtonStack.ButtonDefaults">
        <Setter Property="Width" Value="48" />
        <Setter Property="Height" Value="24"/>
    </Style>
    <Style TargetType="Button" x:Key="StackPanel.ButtonStack.ButtonDefaults-Wide">
        <Setter Property="Width" Value="96" />
        <Setter Property="Height" Value="24" />
    </Style>
</ResourceDictionary>