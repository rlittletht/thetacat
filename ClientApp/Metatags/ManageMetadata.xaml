<Window x:Class="Thetacat.Metatags.ManageMetadata"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Thetacat.Metatags"
        xmlns:controls="clr-namespace:Thetacat.Controls"
        mc:Ignorable="d"
        Title="ManageMetadata" Height="450" Width="800">
    <DockPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="24"/>
            </Grid.RowDefinitions>
            <controls:MetatagTreeView Grid.Row="0" x:Name="MetatagsTree"/>
            <Button Content="Load Metatags" IsDefault="True" Click="LoadMetatags" Grid.Row="1" />
        </Grid>
    </DockPanel>
</Window>
